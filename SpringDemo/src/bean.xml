<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id = "helloWorld" class = "HelloWorld" >
      <property name = "message1" value = "Hello World! Abiram"/>
      <property name = "message2" value = "Hello World! "/>
   </bean>
   <bean id = "helloIndia" class = "HelloIndia"  parent = "helloWorld">
      <property name = "message1" value = "Hello India! Abiram"/>
      
      <property name = "message3" value = "Hello India! "/>
   </bean>
	 <!--  <bean class = "InitHelloWorld" /> -->
</beans>